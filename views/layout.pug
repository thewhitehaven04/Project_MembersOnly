doctype html
html
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')

  script(src="https://cdn.tailwindcss.com") 
  
  header(class="flex flex-row justify-end items-center bg-indigo-200 p-2 gap-2") 
    if user  
      div(class="flex flex-column gap-1 rounded p-2") 
        span=user.name
        span=user.lastName
      a(href="/logout")
        button(type="button" class="rounded p-2 bg-indigo-700 text-white") Logout

    else
      a(href="/login")
        button(type="button" class="p-rounded 2 bg-indigo-700 text-white") Login

  main(class="flex flex-col items-center")
    block content

  if errors
    each error in errors
      ul 
        li error 