doctype html
html
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')

  script(src="https://cdn.tailwindcss.com") 
  
  header(class="flex flex-row justify-end items-center bg-indigo-200 p-1 gap-2") 
    if user  
      div(class="flex flex-column items-center gap-2 rounded p-2") 
        span #{user.name} #{user.lastName}
        if user.isMember 
          span You are a member!
        else 
          a(href="/membership") 
            button(type="button" class="rounded p-2 bg-indigo-700 text-white") Become a member 

      a(href="/session/logout")
        button(type="button" class="rounded p-2 bg-indigo-700 text-white") Logout

    else 
      a(href="/signup")
        button(type="button" class="rounded p-2 text-white bg-indigo-700") Sign-up

  main(class="flex flex-col items-center bg-gray-50 min-h-screen")
    div(class="w-full md:w-2/3")
      block content