doctype html
html
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')

  script(src="https://cdn.tailwindcss.com") 
  
  header(class="flex flex-row justify-end items-center bg-indigo-200 p-2 gap-3") 
    if user  
      div(class="flex flex-column items-center gap-1 rounded p-2") 
        span=user.name
        span=user.lastName
        if user.isMember 
          span You are a member!
        else 
          a(href="/membership") 
            button(type="button" class="rounded p-2 bg-indigo-700 text-white") Become a member 

      a(href="/logout")
        button(type="button" class="rounded p-2 bg-indigo-700 text-white") Logout

  main(class="flex flex-col items-center")
    div(class="w-full lg:w-3/4")
      block content

  if errors
    each error in errors
      ul 
        li error 